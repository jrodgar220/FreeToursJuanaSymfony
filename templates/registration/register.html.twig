{% extends 'home.html.twig' %}
{% block stylesheets %}
	{{ parent()}}
	<link rel="stylesheet" href="{{asset('styles/registro.css')}}">
{% endblock %}
{% block title %}Register
{% endblock %}

{% block body %}
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="container">
				<h1>Crear cuenta</h1>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
				<div class="form-group">
					{{ form_label(registrationForm.nombre, 'Nombre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-12">
						{{ form_widget(registrationForm.nombre, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(registrationForm.apellidos, 'Apellidos', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-12">
						{{ form_widget(registrationForm.apellidos, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-12">
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-12">
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(registrationForm.foto ,'Sube tu foto', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
					<div class="col-sm-12">
						{{ form_widget(registrationForm.foto, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-12">
						{{ form_widget(registrationForm.agreeTerms) }}
						{{ form_label(registrationForm.agreeTerms, 'Aceptar los términos', {'label_attr': {'class': 'checkbox'}}) }}
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-12">
						<button type="submit" class="btn btn-primary">Regístrate</button>
					</div>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
